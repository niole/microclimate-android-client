<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@drawable/stroke_color"
            app:cardElevation="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:anroid="http://schemas.android.com/apk/res-auto"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:id="@+id/peripheral_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:id="@+id/peripheral_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:text="last event: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:id="@+id/last_received_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp" />
        </LinearLayout>
        <Button
                android:text="Delete"
                android:id="@+id/remove_peripheral_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/round_clear_black_24dp"/>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
